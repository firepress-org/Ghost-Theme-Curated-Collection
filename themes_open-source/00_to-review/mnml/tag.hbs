{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{>content-header}}

<header class="main-header tag-head inner ">
  <h1 class="page-title typl8-beta ">{{tag.name}}</h1>
  <h2 class="page-description typl8-delta">A {{pagination.total}}-post collection</h2>
  <br>
  <a class="icon-feed tdn" href="{{@blog.url}}/tag/{{tag.slug}}/rss/"> RSS</a>               <em>feed of posts tagged <strong>{{tag.name}}</strong></em>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
