{{!-- Tag Cloud --}}
{{#get "tags" limit="10" include="count.posts" order="count.posts desc"}}

<div class="sidebar-items u-marginBottom30">
    <h3 class="sidebar-title u-fontSizeBase u-textColorDarker">{{t "Tag Cloud"}}</h3>

    {{#foreach tags}}
        <a href="{{url absolute="true"}}" title="{{name}}" class="button" style="margin-bottom:8px;background-color:#fff">{{name}}</a>
    {{/foreach}}
</div>

{{/get}}
