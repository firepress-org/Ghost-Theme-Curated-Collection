{{!-- Article relative --}}
{{#get "posts" limit="6" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags"}}
<section class="post-related u-backgroundWhite u-paddingTop30 u-paddingBottom20 u-overflowHidden">
    <div class="u-marginAuto u-maxWidth1000">
        <div class="row">

        {{#foreach posts}}
            <article class="col s12 m6 l4 simply-tracking" data-event-category="Article" data-event-action="Related Posts" data-event-label="{{url absolute="true"}}" data-event-non-interaction="1">
                <div class="u-card u-padding0">

                    {{!-- Featured image cover --}}
                    {{#if feature_image}}
                    <div class="post-related-image u-relative u-overflowHidden u-sizeFullWidth">
                        <a href="{{url}}" class="post-related-image--link u-block u-absolute0">
                            <span class="u-absolute0 u-backgroundSizeCover u-backgroundColorGrayLight simply-lazy lazy" data-original="{{feature_image}}"></span>
                        </a>
                    </div>
                    {{/if}}

                    <div class="post-related-body u-padding15 u-flexColumn" style="{{#unless feature_image}} height:100%;width:100% {{else}}height:110px {{/unless}}">

                        {{!-- Primary tag --}}
                        {{#primary_tag}}
                            <a href="{{url}}" class="u-block postMetaInline u-lineHeight1 link--underline u-fontSize15" style="padding-bottom:7px">{{name}}</a>
                        {{/primary_tag}}


                        <a href="{{url}}" class="u-block">
                            {{!-- title --}}
                            <h2 class="post-related-title u-contentTitle u-fontSizeLarge u-fontWeightBold u-overflowHidden u-paddingBottom2">{{title}}</h2>

                            {{!-- excerpt --}}
                            {{#unless feature_image}}
                            <div class="post-related-excerpt u-textColorNormal u-overflowHidden" style="margin-top:7px"> {{excerpt words="20"}} </div>
                            {{/unless}}
                        </a>

                    </div>
                </div>
            </article>
        {{/foreach}}

        </div>
    </div>
</section>
{{/get}}
