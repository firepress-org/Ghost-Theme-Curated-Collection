<!doctype html>
<html class="no-js">
    <head>
        {{! Document Settings }}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        {{! Page Meta }}
        <title>{{@blog.title}}</title>
        <meta name="description" content="{{@blog.description}}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->
        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">
        <link rel="stylesheet" href="{{asset "css/normalise.css"}}">
        <link rel="stylesheet" href="{{asset "css/milligram.min.css"}}">
        <link rel="stylesheet" href="{{asset "css/site.css"}}" media="screen,projection">
        {{ghost_head}}
        <script src="{{asset "js/vendor/modernizr-2.8.0.min.js"}}"></script>
    </head>
    <body>

        <!--[if lt IE 8]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <header>
            <div class="hero">
                <a href="{{@blog.url}}" class="logo">
                    <img src="{{asset "img/logo.png"}}" alt="CodeDaze" />
                </a>
                <div class="author">
                    <img src="{{asset "img/profile-image.jpg"}}" alt="Chris Sainty" />
                </div>
                <h5>
                    Talking about ASP.NET Core & Angular
                </h5>
                <ul class="social">
                    <li><a class="icon-github" href="https://github.com/chrissainty" target="_blank" title="Fork me on Github"></a></li>
                    <li><a class="icon-linkedin" href="https://www.linkedin.com/in/chris-sainty" target="_blank" title="LinkedIn"></a></li>
                    <li><a class="icon-twitter" href="https://twitter.com/chris_sainty" target="_blank" title="Twitter"></a></li>
                </ul>   
                <div class="hero-overlay"></div>
            </div>
        </header>

        <div>
            {{tags}}
        </div>

        {{{body}}}  

        <footer class="main">
            <div class="container clearfix">
            
                <a class="icon-rss" href="{{@blog.url}}/rss/" title="RSS Feed"></a>
                <p class="left">&copy; 2018 Chris Sainty</p>
                <p class="right">Proudly published with Ghost</p>
            
            </div>
        </footer>

        {{ghost_foot}}

        <script src="//code.jquery.com/jquery-3.2.1.min.js"></script>

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-XXXXXXXXX-X', 'auto');
          ga('send', 'pageview');

        </script>
    </body>
</html>
