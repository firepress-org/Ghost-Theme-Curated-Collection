<nav class="pagination" role="navigation">
    {{#if prev}}
        <li class="prev"><a class="withripple" href="{{page_url prev}}">Previous</a></li>
    {{/if}}
        <li class="pagesnums"><span class="page-number">Page {{page}} of {{pages}}</span></li>
    {{#if next}}
        <li class="next"><a class="withripple" href="{{page_url next}}">Next</a></li>
    {{/if}}
</nav>
